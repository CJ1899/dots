}

#update_time () {
#	time="$(date "+ï„³  %b %d %Y %a ï€—  %I:%M:%S %p")"
#}

update_time () { time="$(sb-clock)"
}

#update_weather () {
#	weather="$(curl -s "wttr.in/Hawler?format="%t+%h+%w+%M""| sed -E "s/^(.).*\+/\1/")"
