#!/bin/sh

# init
printf "$$" > ~/.cache/pidofbar
sec=0

# modules
#update_cpu () {
#	cpu="$(grep -o "^[^ ]*" /proc/loadavg )"
#}

update_cpu () { cpu="$(sb-cpu)"
}

#update_cpubars () { cpubars="$(~/scripts/statusbar/sb-cpubars)"
#}

#update_ram () {
#	ram="$(free -h | sed -n "2s/\([^ ]* *\)\{2\}\([^ ]*\).*/\2/p")"
