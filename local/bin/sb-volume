#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

vol="$(pamixer --get-volume-human)"

# If muted, print ðŸ”‡ and exit.
[ "$vol" != "${vol%\[muted\]}" ] && echo ðŸ”‡ && exit

vol="${vol#Volume: }"

split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

#vol="$(printf "%.0f" "$(split "$vol" ".")")"
vol="$(printf "%.0f" "$(split "$vol" ".")")"

case 1 in
	$((vol >= 70)) ) icon="ðŸ”Š" ;;
	$((vol >= 30)) ) icon="ðŸ”‰" ;;
	$((vol >= 1)) )  icon="ðŸ”ˆ" ;;
	* ) echo ðŸ”‡ && exit ;;
esac

echo "$icon$vol%"
